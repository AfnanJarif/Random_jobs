<%- include('../partials/head.ejs') %>
<title>Job | Random Jobs</title>
<%- include('../partials/navprofilepages.ejs') %>

<style> 
    div{
        align-items: center;
    }

    section{
        text-align: center;
        background-color: #036961;
        color: #ffffff;
        height: 250px;
    }
</style>

<section >
    <div>
        <div class="caption">
        </br>
            <text color:"#ffffff" style="font-size: 55px"><%=job.name%></text>
        </div>
    </div>
</section>
<br>

    <div class="container">
        <div class="col-md-12">
            <div class="row">
               <div class="basic-information">
                    <div class="col-md-1 col-sm-1"></div> 
                    <div class="col-md-10 col-sm-10"></div>
                       <div class="profile-content">
                            <ul class="information">
                            
                            <li><h5>General Info</h5></li>
                            <li><span>Recruiter:</span><%= req.user.name %></li>
                            <li><span>Category:</span><%= job.category %></li>
                            <li><span>Type:</span><%= job.jobtype %></li>
                            <li><span>Start Date:</span><%= job.startdate %></li>
                            <li><span>End Date:</span><%= job.enddate %></li>
                            <li><span>Payment:</span><%= job.payment %></li><br>
                            <li><h5>Address</h5></li>
                            <li><span>Union:</span><%= job.location.union %></li>
                            <li><span>Thana:</span><%= job.location.thana %></li>
                            <li><span>District:</span><%= job.location.district %></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-1 col-sm-1"></div> 
               </div>
            </div class="col-md-12 col-sm-12">
        </div>
        <div>
       
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-md-1 col-sm-1"></div>
        <div class="col-md-10 col-sm-10">
            <%if (job.jobdescription != null){%>
                <h5>Description</h5>
                <p><%= job.jobdescription %></p>
            <%}%>
        </div>
        <div class="col-md-1 col-sm-1"></div>
    </div>
    <br> <br> <br>
    <div class="row">
        <div class="col-md-1 col-sm-1"></div>
        <div class="col-md-10 col-sm-10">
            <%if (job.document != null){%>
                <h5>Document</h5>
                 <% const sURL="jobdocument/"+job._id%>
                <embed src="<%= sURL %>" width="100%" height="800px" />
            <%}%>
        </div>
        <div class="col-md-1 col-sm-1"></div>   
    </div>
    </div>
<%- include('../partials/footer.ejs') %>	

